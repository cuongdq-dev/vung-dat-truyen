---
const { categories } = Astro.locals;
---

<div class="mt-12">
  <div class="flex items-center justify-between mb-4">
    <h2 class="text-2xl font-bold">Thể loại</h2>
  </div>

  <div
    class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-3"
  >
    {
      categories &&
        categories
          .filter((cate) => Number(cate?.bookCount) > 10)
          .slice(0, 10)
          .map((category) => (
            <a
              data-astro-prefetch="false"
              href={`/danh-muc/${category.slug}`}
              class="border rounded-md p-3 hover:border-primary hover:bg-primary/5 transition-colors"
            >
              <div class="font-medium">{category.name}</div>
              <div class="text-sm text-muted-foreground">
                {category?.bookCount} truyện
              </div>
            </a>
          ))
    }
  </div>
</div>
